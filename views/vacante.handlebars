<div class="contenido-superior vacante contenedor">
    <div class="caja">
        <p class="etiqueta">Empresa</p>
        <p class="nombre">{{vacante.empresa}}</p>
    </div>

    <div class="caja">
        <p class="etiqueta">Ubicación</p>
        <p class="nombre">{{vacante.ubicacion}}</p>
    </div>

    <div class="caja">
        <p class="etiqueta">Contrato</p>
        <p class="nombre contrato">{{vacante.contrato}}</p>
    </div>

    <div class="caja">
        <p class="etiqueta">Salario</p>
        <p class="nombre">${{vacante.salario}},00</p>
    </div>
</div>

<div class="vacante-contenedor contenedor">
    <main class="contenido">
        <h2>Descripción del Puesto</h2>        
        <div class="vacante-descripcion">
            {{{vacante.descripcion}}}
        </div>
        <a href="/vacantes/editar/{{vacante.url}}" class="btn btn-azul editar-btn">Editar Vacante</a>
    </main>

    <aside class="sidebar">
        <h2>Conocimientos Requeridos</h2>
        <ul class="skills">
            {{#each vacante.skills}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </aside>
</div>

<div class="contenedor datos-reclutador">
    <div class="enviar-datos">
        <h2>Contactar al Reclutador</h2>
        <p>Llena el siguiente formulario, sube tu CV y pronto te contactaremos</p>

        <form action="/vacantes/{{vacante.url}}" method="POST" class="default-form" enctype="multipart/form-data">
            <div class="campo">
                <label for="">Nombre</label>
                <input type="text" name="nombre" placeholder="Tu Nombre">
            </div>        
            <div class="campo">
                <label for="">E-mail</label>
                <input type="email" name="email" placeholder="Tu E-mail">
            </div>    
            <div class="campo">
                <label for="">CV (PDF)</label>
                <input type="file" name="cv">
            </div>  
            <div class="campo">
                <input type="submit" value="Enviar" class="btn btn-verde">
            </div>
        </form>
    </div>
    <div class="info-reclutador">
        <h2>Información del Reclutador</h2>
        {{#if vacante.autor.nombre}}
            <p>{{vacante.autor.nombre}}</p>
        {{/if}}
        {{#if vacante.autor.imagen}}
            <img src="/uploads/perfiles/{{vacante.autor.imagen}}" alt="Imagen del autor de la vacante">
        {{/if}}
    </div>
</div>